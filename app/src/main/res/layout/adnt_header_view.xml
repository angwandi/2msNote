<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/header_view"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <com.example.demad.a2msnote.Add_Note_Widgets.AddView
        android:id="@+id/header_view_add_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:paddingRight="6dp" />

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/header_view_checked_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:background="@drawable/selector_checkbox"
        android:button="@null"
        android:visibility="visible" />

    <com.example.demad.a2msnote.Add_Note_Widgets.EditText
        android:id="@+id/head_view_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@+id/header_view_add_view" />

    <android.support.design.button.MaterialButton
        android:id="@+id/header_view_add_button"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="Add"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <View
        android:id="@+id/header_view_divider"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="16dp"
        android:background="@android:color/darker_gray" />
</RelativeLayout>
